[user]
        name = Cenk Alti
        email = cenkalti@gmail.com

[alias]
        pul = pull --no-edit
        st = status --short --branch
        stu = status -uno
        co = checkout
        ci = commit -m
        cp = cherry-pick
        br = branch
        df = diff --word-diff
        dfc = diff --word-diff --cached
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        w = whatchanged
        amend = commit --amend -C HEAD
        xxx = reset --hard
        assume   = update-index --assume-unchanged
        unassume = update-index --no-assume-unchanged
        assumed  = "!git ls-files -v | grep ^h | cut -c 3-"

[color]
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = green
        changed = yellow
        untracked = cyan

[core]
        editor = vim 
        excludesfile = ~/.gitignore_global
        autocrlf = false
        pager = less -FRSX
        whitespace = fix,trailing-space

[branch]
        autosetuprebase = always

[merge]
        summary = true

[push]
        default = current

[diff]
        algorithm = patience
