[user]
        name = Cenk Alti
        email = cenkalti@gmail.com

[alias]
        st = status
	stu = status -uno
        co = checkout
        ci = commit
	cia = commit -a
        ciam = commit -a -m-
        cp = cherry-pick
        br = branch
        df = diff
        dfc = diff --cached
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        w = whatchanged
	amend = commit --amend -C HEAD
	xxx = reset --hard

[color]
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = green
        changed = yellow
        untracked = cyan

[core]
        editor = emacs
        excludesfile = ~/.gitignore_global
        pager = less -FRSX
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[merge]
        summary = true

[push]
        default = current
