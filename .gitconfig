[user]
        name = Cenk Alti
        email = cenkalti@gmail.com

[alias]
        st = status
        co = checkout
        ci = commit
        br = branch
        df = diff -w
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
        w = whatchanged

[color]
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = green
        changed = yellow
        untracked = cyan

[core]
        editor = emacs
        excludesfile = /home/cenk/.gitignore
        pager = less -FRSX
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[merge]
        summary = true

[push]
        default = current
