Config { font    = "xft:Bitstream Vera Sans Mono:size=12:antialias=true"
       , position = Bottom
       , lowerOnStart = True
       , commands = [ Run Network "wlp2s0" ["-L","1","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","24","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%cpu% | %memory% | %swap% | %wlp2s0% }{ <fc=#ee9a00>%date%</fc> | %uname%"
       }
