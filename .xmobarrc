Config { font    = "xft:Terminus:size=12:antialias=false"
       , position = Bottom
       , lowerOnStart = True
       , commands = [ Run Uptime [] 10
                    , Run Network "wlp2s0" [] 10
                    , Run Wireless "wlp2s0" ["--suffix", "True"] 100
                    , Run Cpu ["-L","3","-H","24", "-t", "CPU: <total>", "--suffix", "True", "--minwidth", "3"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run BatteryP ["BAT0"]
                                   ["-t", "Batt: <left>", "--suffix", "True",
                                    "-L", "10", "-H", "80", "-p", "3",
                                    "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                                    "-L", "-15", "-H", "-5",
                                    "-l", "red", "-m", "blue", "-h", "green"]
                                   10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%cpu% | %memory% | %battery% | %wlp2s0wi% | %wlp2s0% }{ <fc=#ee9a00>%date%</fc> | %uptime% | %uname%"
       }
