import XMonad
import qualified Data.Map        as M

myDmenu = "exe=`dmenu_path | dmenu` && eval \"exec $exe\""

myKeys conf@(XConfig {XMonad.modMask = modMask}) = [M.fromList $
       ((modMask,               xK_p     ), spawn myDmenu)
]

main = do
     xmonad $ defaultConfig
          { terminal    = "terminal"
          , modMask     = mod4Mask
          , borderWidth = 3
          , focusedBorderColor = "blue"
          , keys               = myKeys
          }
